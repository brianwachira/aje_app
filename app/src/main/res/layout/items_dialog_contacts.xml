<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:weightSum="10">

    <Button
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_person" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialog_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dialog_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:textSize="16sp" />
    </LinearLayout>
    <Button android:layout_gravity="center" android:id="@+id/dialog_contact_delete" android:background="@drawable/ic_delete_black_24dp" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1"/>

</LinearLayout>